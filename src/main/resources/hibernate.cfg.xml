<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- SQL dialect -->
        <!-- My postgres -V is 14.4 -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/final_project</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">password123</property>
        <!-- Print executed SQL to stdout -->
        <property name="show_sql">false</property>

        <!-- Annotated entity classes -->
        <mapping class="com.senla.model.entity.User"/>
        <mapping class="com.senla.model.entity.Tariff"/>
        <mapping class="com.senla.model.entity.Subscription"/>
        <mapping class="com.senla.model.entity.User2Subscription"/>
        <mapping class="com.senla.model.entity.RentalPoint"/>
        <mapping class="com.senla.model.entity.Geolocation"/>
        <mapping class="com.senla.model.entity.Scooter"/>
        <mapping class="com.senla.model.entity.ScooterModel"/>
        <mapping class="com.senla.model.entity.Ride"/>
    </session-factory>
</hibernate-configuration>